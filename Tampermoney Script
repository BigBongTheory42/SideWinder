        if (isDeleteMode) {
            const deleteButton = createDeleteButton(() => {
                confirmDelete('Delete this todo list?', () => {
                    todoLists.splice(index, 1);
                    saveState(`${CONSTANTS.STATE_KEYS.TODO_LISTS}_${currentPage}`, todoLists);
